{
    "manifest_version": 3,
    "name": "Website Tracking Extension",
    "version": "1.0",
    "description": "Tracks and blocks websites for student monitoring.",
    "permissions": ["tabs", "storage", "webRequest", "webRequestBlocking", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
      }
    },
    "icons": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  }
  
